if [ "$1" != "init" ]; then
    exit
fi

LEASE_EXP_MAX=$(((2100 - 1970) * 365 * 24 * 3600))

get_dhcp_host_id() {
    ipaddr=$1
    ipaddr=${ipaddr//./-}
    ipaddr=${ipaddr//:/-}
    echo "host-$ipaddr"
}

strip_braces() {
    ipaddr=$1
    ipaddr=${ipaddr//[/}
    ipaddr=${ipaddr//]/}
    echo "$ipaddr"
}

if [ ! -f "$HOSTS_FILE" ]; then
    exit
fi

IFS=', '
while read -r mac name ipaddr extra
do
    ipaddr=$(strip_braces $ipaddr)
    hostname=$(get_dhcp_host_id $ipaddr)
    echo "$LEASE_EXP_MAX $mac $ipaddr $hostname *"
done < $HOSTS_FILE
